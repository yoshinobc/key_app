<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンの形と色 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                    android:color="#666666"
                    android:width="5dp"
            />
        </shape>
    </item>
    <item android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#dddddd"/>
        </shape>
    </item>
</layer-list>